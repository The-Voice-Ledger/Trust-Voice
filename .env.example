# ============================================
# TrustVoice Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to Git!
# ============================================

# DATABASE
DATABASE_URL=postgresql://user:password@host:5432/database

# REDIS
REDIS_URL=redis://localhost:6379

# AI/ML APIs
OPENAI_API_KEY=sk-proj-your-key-here
ADDIS_AI_API_KEY=sk_your-key-here
ADDIS_AI_URL=https://api.addisassistant.com/api/v1/chat_generate
ADDIS_TRANSLATE_URL=https://api.addisassistant.com/api/v1/translate

# PAYMENT PROCESSING
STRIPE_SECRET_KEY=sk_test_your-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# M-PESA (Kenya Mobile Money)
MPESA_CONSUMER_KEY=your-consumer-key
MPESA_CONSUMER_SECRET=your-consumer-secret
MPESA_BUSINESS_SHORT_CODE=174379
MPESA_PASSKEY=your-passkey
MPESA_INITIATOR_NAME=testapi
MPESA_SECURITY_CREDENTIAL=your-encrypted-credential
MPESA_ENVIRONMENT=sandbox
# These URLs will be set after Railway deployment
MPESA_CALLBACK_URL=http://localhost:8001/webhooks/mpesa
MPESA_B2C_RESULT_URL=http://localhost:8001/webhooks/mpesa/b2c/result
MPESA_B2C_QUEUE_TIMEOUT_URL=http://localhost:8001/webhooks/mpesa/b2c/timeout

# COMMUNICATION
TWILIO_ACCOUNT_SID=ACxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TELEGRAM_BOT_TOKEN=1234567890:ABC...
# For production (Railway), set this to your Railway domain
TELEGRAM_WEBHOOK_URL=

# IPFS / PINATA (for video transparency and NFT metadata)
PINATA_API_KEY=your-pinata-api-key
PINATA_API_SECRET=your-pinata-api-secret
PINATA_JWT=your-pinata-jwt-token

# BLOCKCHAIN (for NFT tax receipts)
BLOCKCHAIN_NETWORK=polygon
BLOCKCHAIN_PRIVATE_KEY=0xyour-private-key-here
POLYGON_RECEIPT_CONTRACT=0xYourContractAddress
BASE_RECEIPT_CONTRACT=0xYourContractAddress
ETHEREUM_RECEIPT_CONTRACT=0xYourContractAddress
ARBITRUM_RECEIPT_CONTRACT=0xYourContractAddress

# RPC Endpoints (Alchemy recommended)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-api-key
BASE_RPC_URL=https://mainnet.base.org
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# VOICE AI (Lab 4)
# Enable/disable Telegram bot in START_SERVICES.sh
START_TELEGRAM_BOT=false

# APPLICATION
APP_ENV=development
APP_PORT=8000
APP_HOST=0.0.0.0
SECRET_KEY=change-this-in-production
# JWT_SECRET_KEY overrides SECRET_KEY for JWT signing if set
# JWT_SECRET_KEY=optional-separate-jwt-secret
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# WEBHOOK / API SECURITY
# Secret token for Telegram webhook verification
TELEGRAM_WEBHOOK_SECRET=generate-random-secret-here
# Secret for admin API endpoints (e.g. Telegram webhook management)
ADMIN_API_SECRET=generate-random-secret-here

# ============================================
# RAILWAY PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Set these in Railway dashboard after deployment:
#
# APP_ENV=production
# ALLOWED_ORIGINS=https://your-app.railway.app
# TELEGRAM_WEBHOOK_URL=https://your-app.railway.app/webhooks/telegram
# MPESA_CALLBACK_URL=https://your-app.railway.app/webhooks/mpesa
# MPESA_B2C_RESULT_URL=https://your-app.railway.app/webhooks/mpesa/b2c/result
# MPESA_B2C_QUEUE_TIMEOUT_URL=https://your-app.railway.app/webhooks/mpesa/b2c/timeout
# SECRET_KEY=generate-strong-random-key-for-production
# ============================================
