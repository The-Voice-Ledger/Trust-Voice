    <title>Donation Checkout v2.0</title>
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
    <script>
        // Immediate check before anything else
        window.addEventListener('error', function(e) {
            const jsMarker = document.getElementById('jsTestMarker');
            if (jsMarker) {
                jsMarker.textContent = '‚ùå JS Error: ' + e.message;
                jsMarker.style.color = 'red';
            }
        });
        
        document.addEventListener('DOMContentLoaded', function() {
            const jsMarker = document.getElementById('jsTestMarker');
            if (jsMarker) {
                jsMarker.textContent = '‚úÖ DOMContentLoaded fired';
                jsMarker.style.color = 'orange';
            }
        });
    </script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--tg-theme-bg-color, #ffffff);
            color: var(--tg-theme-text-color, #000000);
            padding: 16px;
        }
        
        .header {
            text-align: center;
            margin-bottom: 24px;
        }
        
        .icon {
