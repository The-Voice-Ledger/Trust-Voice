        }
        
        .voice-confirmation-text {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 16px;
            color: #2E7D32;
        }
        
        .voice-confirmation-buttons {
            display: flex;
            gap: 12px;
        }
        
        .voice-confirm-btn {
            flex: 1;
            padding: 14px;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
        }
        
