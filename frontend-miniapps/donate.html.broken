    <script>
        // IMMEDIATE TEST - this should show an alert if the script runs
        alert('Main script started!');
        
        // Define Telegram WebApp wrapper first
        const tg = window.Telegram?.WebApp || {
            ready: () => {},
            expand: () => {},
            showAlert: (msg) => alert(msg),
            showPopup: (params) => alert(params.message),
            HapticFeedback: {
                impactOccurred: () => {},
                notificationOccurred: () => {}
            },
            initDataUnsafe: { user: { id: 'test' } }
        };
        
        // Define variables at the top level
        let selectedAmount = 25;
        let selectedMethod = 'card';
        let mediaRecorder;
        let audioChunks = [];
        let currentCampaign = null;
        const API_BASE = window.location.origin;
        
        try {
            // First thing: hide the JS test marker to prove JS is running
            const jsMarker = document.getElementById('jsTestMarker');
            if (jsMarker) {
                jsMarker.textContent = '‚úÖ JavaScript is running!';
                jsMarker.style.color = 'green';
            }
            
            tg.ready();
            tg.expand();
            
            if (jsMarker) jsMarker.textContent += ' | Telegram ready';
        } catch (mainError) {
            const jsMarker = document.getElementById('jsTestMarker');
            if (jsMarker) {
                jsMarker.innerHTML = '‚ùå Script error:<br>' + mainError.message + '<br>at line ' + (mainError.lineNumber || 'unknown');
                jsMarker.style.color = 'red';
                jsMarker.style.fontSize = '11px';
            }
            console.error('Init error:', mainError);
        }
        
        // Get campaign ID from URL
        const urlParams = new URLSearchParams(window.location.search);
        const campaignId = urlParams.get('campaign_id');
        
        // Update marker with campaign ID
        const jsMarker2 = document.getElementById('jsTestMarker');
        if (jsMarker2) jsMarker2.textContent += ` | Campaign ID: ${campaignId}`;
        
        // Show debug info on page for troubleshooting
        try {
            const debugDiv = document.createElement('div');
            debugDiv.id = 'debugInfo';
            debugDiv.style.cssText = 'position:fixed;bottom:0;left:0;right:0;background:rgba(0,0,0,0.8);color:#0f0;padding:8px;font-size:10px;z-index:9999;max-height:100px;overflow:auto';
            debugDiv.textContent = `Debug: URL=${window.location.href} | ID=${campaignId} | Origin=${API_BASE}`;
            document.body.appendChild(debugDiv);
            if (jsMarker2) jsMarker2.textContent += ' | Debug div added';
        } catch (e) {
            if (jsMarker2) jsMarker2.textContent += ` | Debug div error: ${e.message}`;
        }
        
        console.log('Donate page loaded');
        console.log('Campaign ID from URL:', campaignId);
        console.log('Full URL:', window.location.href);
        
        // Load campaign on page load
        if (campaignId) {
            console.log('Loading campaign:', campaignId);
            const dbg = document.getElementById('debugInfo');
            if (dbg) dbg.textContent += ' | Fetching...';
            
            // Show what we're about to do
            const loadingDiv = document.getElementById('loadingCampaign');
            if (loadingDiv) {
                loadingDiv.innerHTML = `
                    <div style="font-size: 24px; margin-bottom: 12px;">‚è≥</div>
                    <div>Loading campaign ${campaignId}...</div>
                    <div style="font-size:10px;margin-top:8px;opacity:0.7">API: ${API_BASE}/api/campaigns/${campaignId}</div>
                `;
            }
            
            loadCampaign(campaignId);
        } else {
            console.log('No campaign ID provided');
            showError('No campaign selected. Please browse campaigns first.');
        }
        
        // Load campaign from API
        async function loadCampaign(id) {
            const debugDiv = document.getElementById('debugInfo');
            try {
                console.log('[Donate] Fetching campaign from:', `${API_BASE}/api/campaigns/${id}`);
                if (debugDiv) debugDiv.textContent += ' | API call started';
                
                // Add cache busting
                const cacheBuster = new Date().getTime();
                const response = await fetch(`${API_BASE}/api/campaigns/${id}?_=${cacheBuster}`);
                
                console.log('[Donate] Response status:', response.status);
                if (debugDiv) debugDiv.textContent += ` | Status: ${response.status}`;
                
                if (!response.ok) {
                    throw new Error(`Campaign not found (${response.status})`);
                }
                
                const campaign = await response.json();
                console.log('[Donate] Campaign data received:', campaign);
                if (debugDiv) debugDiv.textContent += ` | Got: ${campaign.title}`;
                
                currentCampaign = campaign;
                displayCampaign(campaign);
                
            } catch (error) {
                console.error('[Donate] Failed to load campaign:', error);
                console.error('[Donate] API_BASE was:', API_BASE);
                console.error('[Donate] Campaign ID was:', id);
                if (debugDiv) debugDiv.textContent += ` | ERROR: ${error.message}`;
                showError(`Failed to load campaign: ${error.message}`);
            }
        }
        
        function displayCampaign(campaign) {
            console.log('Displaying campaign:', campaign);
            
            document.getElementById('loadingCampaign').style.display = 'none';
            document.getElementById('campaignInfo').style.display = 'block';
            
            document.getElementById('campaignTitle').textContent = campaign.title;
            document.getElementById('campaignOrg').textContent = campaign.ngo_name || 'Anonymous NGO';
            
            // Show progress - use correct API field names
            const raised = campaign.raised_amount_usd || campaign.amount_raised || 0;
            const target = campaign.goal_amount_usd || campaign.target_amount || 0;
            const percentage = target > 0 ? Math.round((raised / target) * 100) : 0;
            
            document.getElementById('campaignProgress').textContent = 
                `$${raised.toLocaleString()} raised of $${target.toLocaleString()} goal (${percentage}%)`;
            
            // Show donation form sections
            document.getElementById('amountSection').style.display = 'block';
            document.getElementById('paymentSection').style.display = 'block';
            document.getElementById('summarySection').style.display = 'block';
            document.getElementById('donateBtn').style.display = 'block';
        }
        
        function showError(message) {
            const loadingDiv = document.getElementById('loadingCampaign');
            if (loadingDiv) loadingDiv.style.display = 'none';
            
            document.getElementById('campaignInfo').style.display = 'none';
            document.getElementById('campaignError').style.display = 'block';
            document.getElementById('errorMessage').innerHTML = `
                ${message}<br><br>
                <small style="font-size:10px;opacity:0.7">
                API_BASE: ${API_BASE}<br>
                Campaign ID: ${campaignId}<br>
                URL: ${window.location.href}
                </small>
            `;
            
            // Hide donation form sections
            document.getElementById('amountSection').style.display = 'none';
            document.getElementById('paymentSection').style.display = 'none';
            document.getElementById('summarySection').style.display = 'none';
            document.getElementById('donateBtn').style.display = 'none';
        }
        
        // Amount selection
        document.querySelectorAll('.amount-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.amount-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                selectedAmount = parseInt(btn.dataset.amount);
                document.getElementById('customAmount').value = '';
                updateSummary();
            });
        });
        
        // Custom amount
        document.getElementById('customAmount').addEventListener('input', (e) => {
            document.querySelectorAll('.amount-btn').forEach(b => b.classList.remove('active'));
            selectedAmount = parseFloat(e.target.value) || 0;
            updateSummary();
        });
        
        // Payment method selection
        document.querySelectorAll('.payment-option').forEach(option => {
            option.addEventListener('click', () => {
                document.querySelectorAll('.payment-option').forEach(o => o.classList.remove('active'));
                option.classList.add('active');
                selectedMethod = option.dataset.method;
            });
        });
        
        // Update summary
        function updateSummary() {
            const fee = selectedAmount * 0.029;
            const total = selectedAmount + fee;
            
            document.getElementById('summaryAmount').textContent = `$${selectedAmount.toFixed(2)}`;
            document.getElementById('summaryFee').textContent = `$${fee.toFixed(2)}`;
            document.getElementById('summaryTotal').textContent = `$${total.toFixed(2)}`;
        }
        
        // Process donation
        async function processDonation() {
            if (!currentCampaign) {
                tg.showAlert('Campaign not loaded. Please try again.');
                return;
            }
            
            if (selectedAmount <= 0) {
                tg.showAlert('Please select or enter a donation amount.');
                return;
            }
            
            const total = (selectedAmount * 1.029).toFixed(2);
            
            tg.showConfirm(
                `Confirm donation of $${total} to "${currentCampaign.title}" via ${selectedMethod}?`,
                async (confirmed) => {
                    if (confirmed) {
                        // Show processing
                        const btn = document.querySelector('.donate-btn');
                        btn.textContent = 'Processing...';
                        btn.disabled = true;
                        
                        try {
                            // Create donation via API
                            const response = await fetch(`${API_BASE}/api/donations/`, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    campaign_id: currentCampaign.id,
                                    amount: selectedAmount,
                                    payment_method: selectedMethod,
                                    user_id: tg.initDataUnsafe?.user?.id || null,
                                    currency: 'USD'
                                })
                            });
                            
                            if (response.ok) {
                                const donation = await response.json();
                                
                                tg.showAlert(`‚úÖ Donation successful! Thank you for supporting ${currentCampaign.title}.\n\nReceipt sent to your Telegram.`);
                                
                                if (tg.HapticFeedback) {
                                    tg.HapticFeedback.notificationOccurred('success');
                                }
                                
                                setTimeout(() => {
                                    tg.close();
                                }, 2000);
                            } else {
                                throw new Error('Payment failed');
                            }
                        } catch (error) {
                            console.error('Donation error:', error);
                            tg.showAlert('Payment failed. Please try again.');
                            btn.textContent = 'Donate Now';
                            btn.disabled = false;
                        }
                    }
                }
            );
        }
        
        // Voice Donation Functions
        let mediaRecorder = null;
        let audioChunks = [];
        let paymentMediaRecorder = null;
        let paymentAudioChunks = [];
        
        async function startVoicePayment() {
            const btn = event.target.closest('.voice-btn');
            const text = document.getElementById('voicePaymentText');
            
            if (!paymentMediaRecorder || paymentMediaRecorder.state === 'inactive') {
                // Start recording
                try {
                    const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
                    paymentMediaRecorder = new MediaRecorder(stream);
                    paymentAudioChunks = [];
                    
                    paymentMediaRecorder.ondataavailable = (event) => {
                        paymentAudioChunks.push(event.data);
                    };
                    
                    paymentMediaRecorder.onstop = async () => {
                        const audioBlob = new Blob(paymentAudioChunks, { type: 'audio/webm' });
                        await processVoicePayment(audioBlob);
                        stream.getTracks().forEach(track => track.stop());
                    };
                    
                    paymentMediaRecorder.start();
                    btn.classList.add('recording');
                    text.textContent = 'Listening...';
                    
                } catch (error) {
                    console.error('Microphone error:', error);
                    tg.showAlert('Could not access microphone. Please check permissions.');
                }
            } else {
                // Stop recording
                paymentMediaRecorder.stop();
                btn.classList.remove('recording');
                text.textContent = 'Say Payment';
            }
        }
        
        async function processVoicePayment(audioBlob) {
            const formData = new FormData();
            formData.append('audio', audioBlob, 'payment.webm');
            formData.append('user_id', tg.initDataUnsafe?.user?.id || 'guest');
            
            try {
                const response = await fetch(API_BASE + '/api/voice/dictate-text', {
                    method: 'POST',
                    body: formData
                });
                
                if (response.ok) {
                    const data = await response.json();
                    handleVoicePaymentResult(data);
                } else {
                    tg.showAlert('Failed to process voice command. Please try again.');
                }
            } catch (error) {
                console.error('Voice payment error:', error);
                tg.showAlert('Network error. Please check your connection.');
            }
        }
        
        function handleVoicePaymentResult(data) {
            const transcription = data.transcription.toLowerCase();
            const responseBox = document.getElementById('voicePaymentResponse');
            const transcriptionDiv = document.getElementById('voicePaymentTranscription');
            
            transcriptionDiv.textContent = `You said: "${data.transcription}"`;
            responseBox.style.display = 'block';
            
            // Match payment methods
            let matchedMethod = null;
            if (transcription.includes('mpesa') || transcription.includes('m-pesa') || transcription.includes('m pesa')) {
                matchedMethod = 'mpesa';
            } else if (transcription.includes('card') || transcription.includes('credit') || transcription.includes('debit')) {
                matchedMethod = 'card';
            } else if (transcription.includes('telegram') || transcription.includes('stars') || transcription.includes('star')) {
                matchedMethod = 'telegram';
            }
            
            if (matchedMethod) {
                // Select the payment method
                document.querySelectorAll('.payment-option').forEach(o => o.classList.remove('active'));
                const option = document.querySelector(`[data-method="${matchedMethod}"]`);
                if (option) {
                    option.classList.add('active');
                    selectedMethod = matchedMethod;
                    
                    // Speak confirmation
                    const methodName = matchedMethod === 'mpesa' ? 'M-Pesa' : 
                                     matchedMethod === 'telegram' ? 'Telegram Stars' : 'Card';
                    const confirmation = `Payment method set to ${methodName}`;
                    speakText(confirmation);
                    
                    // Show visual confirmation
                    const confirmDiv = document.createElement('div');
                    confirmDiv.className = 'voice-confirmation';
                    confirmDiv.textContent = `‚úì ${confirmation}`;
                    responseBox.appendChild(confirmDiv);
                }
            } else {
                speakText("I didn't catch that. Please say M-Pesa, Card, or Telegram Stars.");
            }
            
            // Hide after 5 seconds
            setTimeout(() => {
                responseBox.style.display = 'none';
                responseBox.innerHTML = '<div class="voice-transcription" id="voicePaymentTranscription"></div>';
            }, 5000);
        }
        
        function speakText(text) {
            if ('speechSynthesis' in window) {
                const utterance = new SpeechSynthesisUtterance(text);
                utterance.rate = 0.9;
                utterance.pitch = 1;
                window.speechSynthesis.speak(utterance);
            }
        }
        
        async function startVoiceDonation() {
            const btn = document.getElementById('voiceBtn');
            const icon = document.getElementById('voiceBtnIcon');
            
            if (!mediaRecorder || mediaRecorder.state === 'inactive') {
                // Start recording
                try {
                    const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
                    mediaRecorder = new MediaRecorder(stream);
                    audioChunks = [];
                    
                    mediaRecorder.ondataavailable = (event) => {
                        audioChunks.push(event.data);
                    };
                    
                    mediaRecorder.onstop = async () => {
                        const audioBlob = new Blob(audioChunks, { type: 'audio/webm' });
                        await processVoiceDonation(audioBlob);
                        stream.getTracks().forEach(track => track.stop());
                    };
                    
                    mediaRecorder.start();
                    btn.classList.add('recording');
                    icon.innerHTML = '<rect width="12" height="12" x="6" y="6" rx="2" stroke="currentColor" fill="currentColor"></rect>';
                    
                } catch (error) {
                    console.error('Microphone error:', error);
                    tg.showAlert('Could not access microphone. Please check permissions.');
                }
            } else {
                // Stop recording
                mediaRecorder.stop();
                btn.classList.remove('recording');
                icon.innerHTML = '<path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"></path><path d="M19 10v2a7 7 0 0 1-14 0v-2"></path><line x1="12" y1="19" x2="12" y2="23"></line><line x1="8" y1="23" x2="16" y2="23"></line>';
            }
        }
        
        async function processVoiceDonation(audioBlob) {
            const formData = new FormData();
            formData.append('audio', audioBlob, 'donate.webm');
            formData.append('user_id', tg.initDataUnsafe?.user?.id || 'guest');
            
            try {
                const response = await fetch(API_BASE + '/api/voice/dictate-text', {
                    method: 'POST',
                    body: formData
                });
                
                if (response.ok) {
                    const data = await response.json();
                    displayVoiceDonationResult(data);
                } else {
                    tg.showAlert('Failed to process voice command. Please try again.');
                }
            } catch (error) {
                console.error('Voice donation error:', error);
                tg.showAlert('Network error. Please check your connection.');
            }
        }
        
        function displayVoiceDonationResult(data) {
            const responseBox = document.getElementById('voiceResponse');
            const transcription = document.getElementById('voiceTranscription');
            const message = document.getElementById('voiceMessage');
            
            transcription.textContent = `You said: "${data.transcription}"`;
            
            // Extract amount from transcription
            const amount = extractAmount(data.transcription);
            
            if (amount && amount > 0) {
                message.textContent = `Setting donation to $${amount}`;
                
                // Set the amount
                document.querySelectorAll('.amount-btn').forEach(b => b.classList.remove('active'));
                document.getElementById('customAmount').value = amount;
                selectedAmount = amount;
                updateSummary();
                
                // Speak confirmation
                speakText(`I heard ${amount} dollars. Is that correct?`);
                
                // Show visual confirmation
                const confirmDiv = document.createElement('div');
                confirmDiv.className = 'voice-confirmation';
                confirmDiv.textContent = `‚úì Donation amount: $${amount}`;
                message.insertAdjacentElement('afterend', confirmDiv);
                
            } else {
                message.textContent = "Couldn't understand the amount. Please say a number like '50 dollars' or 'donate 100'.";
                speakText("I didn't catch the amount. Please try again.");
            }
            
            responseBox.style.display = 'block';
            
            // Hide after 6 seconds
            setTimeout(() => {
                responseBox.style.display = 'none';
            }, 6000);
        }
        
        function extractAmount(text) {
            // Try to extract numbers from text
            text = text.toLowerCase();
            
            // Remove common words
            text = text.replace(/donate|donation|give|want to|i want to|dollars|dollar|usd|birr/gi, ' ');
            
            // Find numbers (including written numbers)
            const numberWords = {
                'one': 1, 'two': 2, 'three': 3, 'four': 4, 'five': 5,
                'six': 6, 'seven': 7, 'eight': 8, 'nine': 9, 'ten': 10,
                'twenty': 20, 'thirty': 30, 'forty': 40, 'fifty': 50,
                'sixty': 60, 'seventy': 70, 'eighty': 80, 'ninety': 90,
                'hundred': 100, 'thousand': 1000
            };
            
            // Replace written numbers
            for (const [word, value] of Object.entries(numberWords)) {
                text = text.replace(new RegExp(word, 'gi'), value.toString());
            }
            
            // Extract numeric values
            const matches = text.match(/\d+(\.\d+)?/g);
            if (matches && matches.length > 0) {
                return parseFloat(matches[0]);
            }
            
            return null;
        }
        
        // Initial summary
        updateSummary();
    </script>
